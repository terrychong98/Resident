<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/show"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/period"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:gravity="right"/>

            <TextView
                android:id="@+id/textViewPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/show"
                android:text="3 Year"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/showPlate"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/show"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="@string/vehicle_plate"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textColor="#000000"
                android:gravity="right"/>

            <TextView
                android:id="@+id/textViewPlate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/show"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/showPlate"
                android:background="@color/colorPrimary"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="ABD1234"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/showStatus"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/showPlate"
                android:layout_marginLeft="5dp"
                android:text="@string/status"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:gravity="right"/>

            <TextView
                android:id="@+id/textViewStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/showPlate"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/showStatus"
                android:text="Pending"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:padding="4dp"
                android:src="@drawable/ic_delete"
                android:textSize="4pt" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>